{
    "name": "joebocock/chess-api-php",
    "description": "A simple API SDK to work with the public chess.com API.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "JoeBocock\\ChessApi\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Joe Bocock",
            "email": "joebocock@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/http-message": "^1.0",
        "psr/http-client": "^1.0",
        "guzzlehttp/guzzle": "^7.5",
        "guzzlehttp/psr7": "^2.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.9",
        "pestphp/pest": "^1.22",
        "friendsofphp/php-cs-fixer": "^3.14",
        "pestphp/pest-plugin-parallel": "^1.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
